<div class="container">
    <div class="btn-group">
        <button id="lang_text" type="button" class="btn btn-default">
            <img src="~/Resources/1494386875_PL.png" /> @CrystalSiege.Resources.HomeTexts.pl_lang
        </button>
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li id="lang_pl" data-target="#myCarousel" data-slide-to="0" class="active">
                <a href="#"><img src='@Url.Content("~/Resources/1494386875_PL.png")' /> @CrystalSiege.Resources.HomeTexts.pl_lang</a>
            </li>
            <li id="lang_eng" data-target="#myCarousel" data-slide-to="1">
                <a href="#"><img src='@Url.Content("~/Resources/1494386869_GB.png")' /> @CrystalSiege.Resources.HomeTexts.eng_lang</a>
            </li>
        </ul>
    </div>
</div>
<script type="text/javascript">
        // Initialize your tinyMCE Editor with your preferred options
    $(document).ready(function () {
        $("#lang_pl").click(function () {
            $("#lang_text").html("<img src='../../Resources/1494386875_PL.png' /> @CrystalSiege.Resources.HomeTexts.pl_lang");
        });
        $("#lang_eng").click(function () {
            $("#lang_text").html("<img src='../../Resources/1494386869_GB.png' /> @CrystalSiege.Resources.HomeTexts.eng_lang");
        });
        $('.carousel').carousel({
            interval: false
        });
    })
</script>